<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cepgranada.micalculadora.MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvVisor"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/visorPorDefecto"
            android:id="@+id/tvVisor"
            android:textAlignment="textEnd"
            android:textSize="60sp"
            android:background="#f0ebeb" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:id="@+id/bt7"
                android:onClick="btNumerico_onClick"
                style="@style/stlBoton" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:id="@+id/bt8"
                android:layout_margin="5dp"
                android:onClick="btNumerico_onClick"
                style="@style/stlBoton" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:id="@+id/bt9"
                android:onClick="btNumerico_onClick"
                style="@style/stlBoton" />

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="+"
                android:id="@+id/button4"
                android:layout_margin="5dp"
                android:textSize="60dp"
                android:onClick="btOperador_Click"
                android:background="#f8f2f2" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:id="@+id/bt4"
                android:layout_margin="5dp"
                android:onClick="btNumerico_onClick"
                style="@style/stlBoton" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:id="@+id/bt5"
                android:layout_margin="5dp"
                android:onClick="btNumerico_onClick"
                style="@style/stlBoton" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:id="@+id/bt6"
                android:layout_margin="5dp"
                android:onClick="btNumerico_onClick"
                style="@style/stlBoton" />

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/button8"
                android:layout_margin="5dp"
                android:onClick="btOperador_Click"
                android:background="#f8f2f2"
                style="@style/stlBoton" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="stlBoton">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/bt1"
                android:layout_margin="5dp"
                android:onClick="btNumerico_onClick"
                style="@style/stlBoton" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:id="@+id/bt2"
                android:layout_margin="5dp"
                style="@style/stlBoton"
                android:onClick="btNumerico_onClick"
                android:layout_weight="10" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:id="@+id/bt3"
                android:layout_margin="5dp"
                android:onClick="btNumerico_onClick"
                style="@style/stlBoton" />

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="/"
                android:id="@+id/button12"
                android:layout_margin="5dp"
                android:onClick="btOperador_Click"
                android:background="#f8f2f2"
                style="@style/stlBoton" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="C"
                android:id="@+id/btBorrar"
                android:onClick="btBorrado_Click"
                android:background="#f8f2f2"
                style="@style/stlBoton" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/bt4"
                android:layout_margin="5dp"
                android:onClick="btNumerico_onClick"
                style="@style/stlBoton" />

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="="
                android:id="@+id/btResultado"
                android:layout_margin="5dp"
                android:onClick="btResultado_Click"
                android:background="#f8f2f2"
                style="@style/stlBoton" />

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="X"
                android:id="@+id/button16"
                android:layout_margin="5dp"
                android:onClick="btOperador_Click"
                android:background="#f8f2f2"
                style="@style/stlBoton" />
        </TableRow>

    </TableLayout>
</RelativeLayout>
